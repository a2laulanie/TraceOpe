                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Importance haute" />


                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/raw_prive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="100dp"
                    android:layout_row="8"
                    android:background="@color/grey"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:touchscreenBlocksFocus="false">

                        <Spinner
                            android:id="@+id/spinner_prive"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/domaine_prive" />

                        <EditText
                            android:id="@+id/editText_libre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="20dp"
                            android:hint="particularités..."
                            android:maxLines="20" />

                    </LinearLayout>
                </TableRow>

                <LinearLayout
                    android:id="@+id/linearLayout_tiers"
                    android:layout_width="600dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_row="9"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_tiers"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Tiers responsable" />
                </LinearLayout>

                <TableRow
                    android:id="@+id/raw_tiers"
                    android:layout_width="wrap_content"

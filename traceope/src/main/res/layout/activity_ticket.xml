                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/imageView6_ticket"
                        android:src="@drawable/ic_photo"
                        android:layout_row="12"
                        android:layout_column="1" />

                    <ImageView
                        android:layout_width="281dp"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView7_ticket"
                        android:src="@drawable/report_2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="50dp" />
                </LinearLayout>

            </GridLayout>
        </ScrollView>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_maintenance"
        android:layout_width="fill_parent"
        android:layout_height="667dp"
        android:layout_alignEnd="@+id/buttonSelectTime"
        android:layout_alignRight="@+id/buttonSelectTime"
        android:layout_below="@+id/rdg_choix"
        android:visibility="gone">

        <ScrollView
            android:id="@+id/scrollView_maintenance"

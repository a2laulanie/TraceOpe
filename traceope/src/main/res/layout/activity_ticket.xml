                            android:layout_width="146dp"
                            android:layout_height="wrap_content"

                            android:entries="@array/cable_nom"
                            android:prompt="@string/ticket_niveau" />

                        <Spinner
                            android:id="@+id/spinner_fixe_yes_cable_nbr"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"

                            android:entries="@array/cable_nbr"

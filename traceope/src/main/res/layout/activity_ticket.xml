                            android:orientation="horizontal"
                            android:touchscreenBlocksFocus="false">

                            <RadioButton
                                android:id="@+id/rb_fixe_oui"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Oui" />

                            <RadioButton

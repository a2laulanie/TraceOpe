                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:layout_row="3"
                    android:background="@color/grey"
                    android:visibility="visible"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_site_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Coordonnées du site :" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="5.72"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/tv_site_nom_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Nom du site" />

                        <EditText
                            android:id="@+id/tv_site_add_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Adresse du site" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_site_gps_m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coordonnées GPS :" />

                            <EditText
                                android:id="@+id/tv_site_gps_lat_m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Latitude" />

                            <EditText
                                android:id="@+id/tv_site_gps_long_m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Longitude" />

                        </LinearLayout>


                    </LinearLayout>

                </TableRow>

                <LinearLayout
                    android:id="@+id/linearLayout_domaine_maintenance"
                    android:layout_width="600dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/rdg_domaine_maintenance"
                        android:layout_width="300dp"
                        android:layout_height="55dp"
                        android:layout_below="@+id/text"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rd_public_maintenance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/domaine_public" />

                        <RadioButton
                            android:id="@+id/rd_prive_maintenance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/domaine_prive" />
                    </RadioGroup>

                </LinearLayout>

                <TableRow
                    android:id="@+id/raw_public_maintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_row="5"
                    android:background="@color/grey"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_public_maintenance"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/domaine_public" />

                        <CheckBox
                            android:id="@+id/checkBox_maintenance"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Importance haute" />


                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/raw_prive_maintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="100dp"
                    android:layout_row="5"
                    android:background="@color/grey"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:touchscreenBlocksFocus="false">

                        <Spinner
                            android:id="@+id/spinner_prive_m"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/domaine_prive" />

                        <EditText
                            android:id="@+id/editText_libre_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="20dp"
                            android:hint="particularités..."
                            android:maxLines="20" />

                    </LinearLayout>
                </TableRow>

                <LinearLayout
                    android:id="@+id/linearLayout_corrective_maintenance"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Maintenance corrective :"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.88"
                        android:ems="10"
                        android:gravity="top"
                        android:hint="dans le cadre de l\'intervention , nous avons constaté que..."
                        android:inputType="textMultiLine"
                        android:maxLines="10"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_maintenance_img"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="7"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/imageView6"
                        android:src="@drawable/ic_photo"
                        android:layout_row="8"
                        android:layout_column="1"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="50dp" />

                    <ImageView
                        android:layout_width="281dp"
                        android:layout_height="258dp"
                        android:id="@+id/imageView7"
                        android:src="@drawable/report_2"
                        android:layout_marginLeft="50dp" />
                </LinearLayout>


            </GridLayout>
        </ScrollView>
    </RelativeLayout>


</RelativeLayout>



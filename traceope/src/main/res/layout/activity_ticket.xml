        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonSelectDate"
        android:background="@color/grey"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_menu_incident"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/menu_incident" />

        <RadioButton
            android:id="@+id/rd_menu_maintenance"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/menu_maintenance" />
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/layout_incident"
        android:layout_width="fill_parent"
        android:layout_height="667dp"
        android:layout_alignEnd="@+id/buttonSelectTime"
        android:layout_alignRight="@+id/buttonSelectTime"
        android:layout_below="@+id/rdg_choix"
        android:visibility="gone">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="600dp">

            <GridLayout

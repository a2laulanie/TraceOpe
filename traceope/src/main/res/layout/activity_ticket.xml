                            android:layout_height="wrap_content"

                            android:entries="@array/cable_capacite"
                            android:prompt="@string/ticket_niveau" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/raw_coord_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_row="7"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/rdg_domaine"
                        android:layout_width="300dp"
                        android:layout_height="55dp"
                        android:layout_below="@+id/text"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rd_public"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/domaine_public" />

                        <RadioButton
                            android:id="@+id/rd_prive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/domaine_prive" />
                    </RadioGroup>

                </LinearLayout>

                <TableRow
                    android:id="@+id/raw_public"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:layout_row="8"
                    android:background="@color/grey"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_public"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/domaine_public" />

                        <CheckBox
